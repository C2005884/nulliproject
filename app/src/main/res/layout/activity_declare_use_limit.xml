<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".declare.DeclareUseLimitActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="이용제한"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="서비스 이용 제한"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="게시판에 들어가니 접근이 제한되어있다고 나와요."
        android:textStyle="normal"
        android:textColor="@color/txt_dark_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="게시판에서 글쓰기 버튼과 댓글 입력창이 뜨지 않아요."
        android:textStyle="normal"
        android:textColor="@color/txt_dark_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="이용 제한은 언제 풀리나요?"
        android:textStyle="normal"
        android:textColor="@color/txt_dark_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="게시 중단"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="타인이 적은 게시물을 삭제하고 싶어요."
        android:textStyle="normal"
        android:textColor="@color/txt_dark_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="제 개인정보가 적혀있는 게시물을 삭제하고 싶어요."
        android:textStyle="normal"
        android:textColor="@color/txt_dark_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="명예훼손 및 유해정보의 소지가 있는 게시물을 삭제하고 싶어요."
        android:textStyle="normal"
        android:textColor="@color/txt_dark_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>